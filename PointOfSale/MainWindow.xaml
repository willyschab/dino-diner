<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        xmlns:menu="clr-namespace:DinoDiner.Menu;assembly=Menu"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="800">
    <Window.DataContext>
        <menu:Order/>
    </Window.DataContext>
    <DockPanel>
        <local:OrderControl x:Name="OrderList" DockPanel.Dock="Right" Width="200" Background="LightSteelBlue">
        </local:OrderControl>
        <Frame Name="OrderInterface" Source="MenuCategorySelection.xaml" DataContextChanged="OnDataContextChanged"></Frame>
    </DockPanel>
</Window>
